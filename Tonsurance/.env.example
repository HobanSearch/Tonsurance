# Tonsurance Phase 4 Hedged Insurance - Environment Configuration

# ====================
# TON Blockchain
# ====================
TON_NETWORK=testnet  # testnet or mainnet
TON_API_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_toncenter_api_key_here

# ====================
# Smart Contract Addresses (Deploy first, then update these)
# ====================
PRICING_ORACLE_ADDRESS=
HEDGE_COORDINATOR_ADDRESS=
HEDGED_POLICY_FACTORY_ADDRESS=
RESERVE_VAULT_ADDRESS=

# ====================
# Keeper Wallet
# ====================
KEEPER_MNEMONIC="word1 word2 word3 ... word24"
KEEPER_ADDRESS=

# ====================
# Polymarket API
# ====================
POLYMARKET_API_URL=https://clob.polymarket.com
POLYMARKET_API_KEY=your_polymarket_api_key
POLYMARKET_API_SECRET=your_polymarket_api_secret

# ====================
# Binance Futures API (for Perpetuals)
# ====================
BINANCE_API_URL=https://fapi.binance.com
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=true  # Set to false for mainnet

# ====================
# Allianz Parametric Insurance API
# ====================
ALLIANZ_API_URL=https://api.allianz-parametric.com
ALLIANZ_API_KEY=your_allianz_api_key
ALLIANZ_CLIENT_ID=your_allianz_client_id
ALLIANZ_USE_MOCK=true  # Set to false when real API is available

# ====================
# API Server Configuration
# ====================
API_PORT=3000
API_CORS_ORIGIN=*  # Set to specific domain in production
WS_UPDATE_INTERVAL=5000  # WebSocket update interval in ms

# ====================
# Keeper Configuration
# ====================
PRICING_ORACLE_UPDATE_INTERVAL=5000  # Update prices every 5 seconds
POLYMARKET_KEEPER_POLL_INTERVAL=5000
PERP_KEEPER_POLL_INTERVAL=5000
ALLIANZ_KEEPER_POLL_INTERVAL=10000  # Slower for parametric insurance

# ====================
# Database (Optional - for production)
# ====================
DATABASE_URL=postgresql://user:password@localhost:5432/tonsurance
REDIS_URL=redis://localhost:6379

# ====================
# Monitoring & Alerts (Optional)
# ====================
SENTRY_DSN=
SLACK_WEBHOOK_URL=
ALERT_EMAIL=

# ====================
# Security
# ====================
# IMPORTANT: In production, use AWS Secrets Manager or similar
# Never commit real API keys to git!

# Multi-sig configuration (for mainnet)
MULTI_SIG_ENABLED=false
MULTI_SIG_THRESHOLD=3
MULTI_SIG_SIGNERS=address1,address2,address3,address4,address5

# ====================
# Development & Testing
# ====================
NODE_ENV=development  # development, staging, production
LOG_LEVEL=debug  # debug, info, warn, error
ENABLE_API_LOGGING=true
