# Tonsurance Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# API Server Configuration
# ============================================
API_PORT=8080
API_HOST=0.0.0.0
LOG_LEVEL=info

# ============================================
# Database Configuration
# ============================================
POSTGRES_PASSWORD=change_me_in_production
DATABASE_URL=postgresql://tonsurance:change_me_in_production@localhost:5432/tonsurance

# ============================================
# Cache & Message Queue
# ============================================
REDIS_URL=redis://localhost:6379
RABBITMQ_PASSWORD=change_me_in_production
RABBITMQ_URL=amqp://tonsurance:change_me_in_production@localhost:5672

# ============================================
# TON Blockchain Configuration
# ============================================
TON_MAINNET=false
TON_ENDPOINT=https://testnet.toncenter.com/api/v2/jsonRPC
TON_API_KEY=your_ton_api_key_here
TON_WALLET_MNEMONIC=your wallet mnemonic here for signing

# ============================================
# Oracle Configuration
# ============================================
REDSTONE_API_KEY=your_redstone_key
PYTH_RPC_URL=https://xc-mainnet.pyth.network
CHAINLINK_RPC_URL=https://...

# ============================================
# Risk Management Configuration
# ============================================
RISK_MONITOR_INTERVAL=60
REBALANCER_INTERVAL=300
ARBITRAGE_INTERVAL=900

# Risk limits
MAX_LTV=0.75
MIN_RESERVE_RATIO=0.15
MAX_SINGLE_ASSET_EXPOSURE=0.30
MAX_CORRELATED_EXPOSURE=0.50
REQUIRED_STRESS_BUFFER=1.5

# Emergency shutdown thresholds
MAX_LTV_SHUTDOWN=0.95
MIN_RESERVE_SHUTDOWN=0.05

# ============================================
# Monitoring & Alerts
# ============================================
DATADOG_API_KEY=your_datadog_key
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090

# Sentry (error tracking)
SENTRY_DSN=https://...

# PagerDuty (alerts)
PAGERDUTY_API_KEY=your_pagerduty_key

# ============================================
# Notifications
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHANNEL_ID=@tonsurance_alerts

SENDGRID_API_KEY=your_sendgrid_key
NOTIFICATION_EMAIL=alerts@tonsurance.com

# ============================================
# Security
# ============================================
JWT_SECRET=your_jwt_secret_min_32_chars
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=60

# ============================================
# Development/Production
# ============================================
ENVIRONMENT=development
DEBUG=false
