# Tonsurance Production Environment Variables
# Copy this file to .env.production and fill in the values

# TON Blockchain Configuration
TON_RPC_URL=https://toncenter.com/api/v2/jsonRPC
KEEPER_MNEMONIC="word1 word2 word3 ... word24"
PRICING_ORACLE_ADDRESS=EQC...

# Oracle API Keys
REDSTONE_API_KEY=your_redstone_api_key
PYTH_API_KEY=your_pyth_api_key
CHAINLINK_API_KEY=your_chainlink_api_key

# External Hedge Venue API Keys
POLYMARKET_API_KEY=your_polymarket_api_key
BINANCE_API_KEY=your_binance_api_key
ALLIANZ_API_KEY=your_allianz_api_key

# Database Configuration
POSTGRES_USER=tonsurance
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=tonsurance

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password

# Alert Configuration
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Keeper Configuration
UPDATE_INTERVAL=5
BRIDGE_UPDATE_INTERVAL=60
LOG_LEVEL=info
