{
  "name": "tonsurance-monorepo",
  "version": "1.0.0",
  "description": "Cross-chain stablecoin insurance protocol on TON blockchain",
  "private": true,
  "workspaces": [
    "services",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build:backend && npm run build:contracts && npm run build:services && npm run build:frontend",
    "build:backend": "cd backend && dune build",
    "build:contracts": "npx blueprint build --all",
    "build:services": "cd services && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "jest --testPathIgnorePatterns='/node_modules/' --maxWorkers=1",
    "test:contracts": "jest --testPathPattern='tests/' --testPathIgnorePatterns='/node_modules/' --maxWorkers=1",
    "test:services": "cd services && npm test",
    "test:backend": "cd backend && dune test",
    "test:security": "jest tests/security/CriticalVulnerabilities.spec.ts --maxWorkers=1",
    "test:single": "jest --maxWorkers=1",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:services": "cd services && npm run dev",
    "start:pricing-keeper": "cd services && npm run start:pricing",
    "start:bridge-keeper": "cd services && npm run start:bridge",
    "start:api": "cd services && npm run start:api",
    "start:ws": "cd services && npm run start:ws",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "docker:build": "docker-compose -f infra/docker/docker-compose.production.yml build",
    "docker:up": "docker-compose -f infra/docker/docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f infra/docker/docker-compose.production.yml down",
    "deploy:create-wallet": "npx ts-node scripts/dev/create-testnet-wallet.ts",
    "deploy:verify-contracts": "./scripts/dev/verify-contracts.sh",
    "deploy:all-testnet": "./scripts/dev/deploy-all-testnet.sh",
    "deploy:verify": "npx ts-node scripts/dev/verify-deployment.ts",
    "deploy:update-frontend": "./scripts/dev/update-frontend-env.sh",
    "deploy:test-integration": "npx ts-node scripts/dev/test-integration.ts",
    "deploy:vault": "npx blueprint run deployMultiTrancheVault --testnet",
    "deploy:oracle": "npx blueprint run deployPricingOracle --testnet",
    "deploy:factory": "npx blueprint run deployPolicyFactory --testnet",
    "deploy:sharding": "npx blueprint run deployPolicySharding --testnet"
  },
  "dependencies": {
    "@ton/blueprint": "^0.22.0",
    "@ton/core": "^0.62.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@ton-community/sandbox": "^0.11.0",
    "@ton/sandbox": "^0.38.0",
    "@ton/test-utils": "^0.12.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HobanSearch/Tonsurance"
  },
  "keywords": [
    "ton",
    "blockchain",
    "insurance",
    "defi",
    "stablecoin",
    "cross-chain",
    "ocaml",
    "typescript"
  ],
  "author": "Tonsurance Team",
  "license": "MIT"
}
