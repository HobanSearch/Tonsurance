# Tonny Inference Server (without MLX, for Docker)
# Serves the fine-tuned Tonny-7B model via Ollama-compatible API

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    wget \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install Python dependencies for inference
RUN pip install --no-cache-dir \
    transformers>=4.36.0 \
    torch>=2.1.0 \
    accelerate>=0.25.0 \
    fastapi>=0.108.0 \
    uvicorn[standard]>=0.25.0 \
    pydantic>=2.5.0 \
    sentencepiece>=0.1.99 \
    protobuf>=4.25.0

# Copy model server code
COPY tonny_inference_server.py ./

# Copy the fine-tuned model
COPY training_data/models/tonny-7b-merged ./models/tonny-7b-merged

# Expose Ollama-compatible port
EXPOSE 11434

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:11434/health || exit 1

# Run the inference server
CMD ["python", "tonny_inference_server.py", "--host", "0.0.0.0", "--port", "11434", "--model-path", "models/tonny-7b-merged"]
