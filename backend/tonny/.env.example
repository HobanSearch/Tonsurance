# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Webhook Configuration (for production)
WEBHOOK_URL=https://your-domain.com  # Set this for webhook mode
WEBHOOK_PORT=8080
WEBHOOK_PATH=/webhook

# Tonny AI Model Configuration
TONNY_API_URL=http://localhost:11434  # Ollama API endpoint
TONNY_MODEL=tonny

# Database Configuration (optional)
DATABASE_URL=postgresql://user:pass@localhost/tonsurance
REDIS_URL=redis://localhost:6379/0

# TON Blockchain Configuration
TON_RPC_ENDPOINT=https://toncenter.com/api/v2/jsonRPC
TON_POLICY_FACTORY_ADDRESS=EQC...  # Your policy factory contract address

# Pricing Configuration
BASE_PREMIUM_BPS=50  # 0.5% base premium
MIN_DURATION_DAYS=7
MAX_DURATION_DAYS=365
MIN_COVERAGE_AMOUNT=100
MAX_COVERAGE_AMOUNT=1000000

# Bridge Monitoring
BRIDGE_HEALTH_UPDATE_INTERVAL=300  # 5 minutes

# Environment
NODE_ENV=production
LOG_LEVEL=info
